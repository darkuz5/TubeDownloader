<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/contenedorx"
    android:layout_margin="5dp"
    
    android:background="@drawable/fondovideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="78dip" >
        
       <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"  > 
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="66dip" >

        <RelativeLayout
            android:layout_width="125dip"
            android:layout_gravity="center"
                android:layout_height="66dip">

            <ImageView
                android:id="@+id/imgInfo"
                android:layout_width="120dip"
                android:layout_height="66dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultthumb" />

            <TextView
                android:id="@+id/lenghtInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" 
                android:layout_marginRight="8dp"
                android:layout_marginBottom="3dp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:padding="3dp"
                android:text="00:00:00" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <TextView
            android:id="@+id/tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:selectAllOnFocus="true"
            android:layout_marginBottom="5dp"  />

        <TextView
            android:id="@+id/userInfo"
            android:visibility="invisible"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"  />     
        
    </LinearLayout>
    </LinearLayout>    

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:background="@drawable/fondolboton"
               android:orientation="horizontal" >
 
               <LinearLayout
                   android:id="@+id/toHiddenOne"
                   android:background="@drawable/fondoboton"
                   android:clickable="true"
                   android:layout_width="fill_parent"
                   android:layout_height="42dp"
                   android:layout_weight="0.5"
                   android:orientation="horizontal" >

                   <ImageView
                       android:id="@+id/descargaVideo"
                       android:layout_width="36dp"
                       android:layout_height="36dp" 
                       android:paddingLeft="5dp"
                       android:clickable="true"
                       android:src="@drawable/clouddownload" />

                   <TextView 
                       android:id="@+id/textD"
                       android:paddingLeft="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="36dp"
                       android:textColor="#9B9EA3"
                       android:gravity="center_vertical"
                       android:text="@string/forTextD" />

                   <TextView
                       android:id="@+id/idDwn"
                       android:layout_width="1dp"
                       android:layout_height="1dp"
                       android:visibility="invisible" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/playVideo"
                   android:background="@drawable/fondoboton"
                   android:clickable="true"
                   android:layout_width="fill_parent"
                   android:layout_height="42dp"
                   android:layout_weight="0.5"
                   android:orientation="horizontal" >
                   <ImageView
                       android:id="@+id/playVideoimg"
                       android:layout_width="36dp"
                       android:paddingLeft="5dp"
                       android:layout_height="36dp"
                       android:clickable="true"
                       android:src="@drawable/movie" />
                   <TextView 
                       android:id="@+id/textP"
                       android:paddingLeft="5dp"
                       android:layout_width="wrap_content"
                       android:textColor="#9B9EA3"
                       android:layout_height="36dp"
                       android:gravity="center_vertical"
                       android:text="@string/forTextP" />
                   <TextView
                       android:id="@+id/idPlyx"
                       android:layout_width="1dp"
                       android:layout_height="1dp"
                       android:visibility="invisible" />
               </LinearLayout> 
           </LinearLayout>
 

    </LinearLayout>
 



</LinearLayout>
